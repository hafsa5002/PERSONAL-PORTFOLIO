        <i class="devicon-tailwindcss-plain colored text-4xl"></i>
        <p class="mt-2">Responsive Design</p>
      </div>
      
    </div>

    <!-- Skill Details -->
    <div id="skillDetails" class="flex-1 bg-[#1e293b] border border-[#2dd4bf]/30 rounded-lg p-6 text-gray-300 hidden md:block transition-all duration-300 ease-in-out">
      <pre class="text-sm sm:text-base md:text-lg whitespace-pre-wrap"><code id="skillText">// Click on a skill to learn more</code></pre>
    </div>
  </div>
