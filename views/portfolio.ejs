<section id="contact" class="min-h-screen flex flex-col items-center justify-center px-6 sm:px-12 lg:px-20 bg-[#0f172a]">
  <h2 class="text-2xl sm:text-3xl font-bold text-[#2dd4bf] mb-8">~/contact</h2>

  <div class="flex flex-col md:flex-row gap-8 w-full max-w-6xl">

    <!-- Contact Form -->
    <form action="/message" method="POST" class="flex-1 flex flex-col gap-6 bg-[#111827] p-6 rounded-lg border border-[#2dd4bf]/30 shadow-lg">
      
      <!-- Name -->
      <div class="relative">
        <input type="text" name="name" id="name" placeholder=" " required
          class="peer w-full bg-[#0f172a] border border-[#2dd4bf]/30 rounded px-4 py-3 text-white focus:outline-none focus:border-[#14b8a6] transition" />
        <label for="name" class="absolute left-4 top-3 text-gray-400 text-sm transition-all peer-placeholder-shown:top-3 peer-placeholder-shown:text-gray-500 peer-placeholder-shown:text-base peer-focus:top-[-0.5rem] peer-focus:text-[#2dd4bf] peer-focus:text-sm">
          Your Name
        </label>
      </div>

      <!-- Email -->
      <div class="relative">
        <input type="email" name="email" id="email" placeholder=" " required
          class="peer w-full bg-[#0f172a] border border-[#2dd4bf]/30 rounded px-4 py-3 text-white focus:outline-none focus:border-[#14b8a6] transition" />
        <label for="email" class="absolute left-4 top-3 text-gray-400 text-sm transition-all peer-placeholder-shown:top-3 peer-placeholder-shown:text-gray-500 peer-placeholder-shown:text-base peer-focus:top-[-0.5rem] peer-focus:text-[#2dd4bf] peer-focus:text-sm">
          Your Email
        </label>
      </div>

      <!-- Message -->
      <div class="relative">
        <textarea name="message" id="message" rows="5" placeholder=" " required
          class="peer w-full bg-[#0f172a] border border-[#2dd4bf]/30 rounded px-4 py-3 text-white resize-none focus:outline-none focus:border-[#14b8a6] transition"></textarea>
        <label for="message" class="absolute left-4 top-3 text-gray-400 text-sm transition-all peer-placeholder-shown:top-3 peer-placeholder-shown:text-gray-500 peer-placeholder-shown:text-base peer-focus:top-[-0.5rem] peer-focus:text-[#2dd4bf] peer-focus:text-sm">
          Your Message
        </label>
      </div>

      <!-- Submit Button -->
      <button type="submit"
        class="bg-[#2dd4bf] text-black font-bold px-6 py-3 rounded hover:bg-[#14b8a6] hover:shadow-[0_0_15px_#2dd4bf] transition">
        Send Message
      </button>

      <!-- Feedback Messages -->
      <% if (sent === 'true') { %>
        <p class="text-green-400 mt-2 bg-green-900/20 p-2 rounded shadow-sm transition">✅ Message sent successfully!</p>
      <% } else if (sent === 'false') { %>
        <p class="text-red-400 mt-2 bg-red-900/20 p-2 rounded shadow-sm transition">❌ Failed to send message. Try again.</p>
      <% } %>
    </form>

    <!-- Contact Info / Links -->
