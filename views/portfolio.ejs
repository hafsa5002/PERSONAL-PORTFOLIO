<!-- Typed Code Animation (one line at a time, no scroll) -->
<script>
const codeLines = [
  "const intro = \"Hi! I build websites that work everywhere.\";",
  "const skill = \"I design modern, beautiful pages.\";",
  "const backend = \"I make sure your apps run smoothly.\";",
  "const deploy = \"I help your site go live online.\";",
  "console.log(\"Let's create something amazing!\");"
];

const typedElement = document.getElementById('typed-code');
const cursor = document.getElementById('cursor');

let lineIndex = 0;
let charIndex = 0;

function typeLine() {
  const line = codeLines[lineIndex];
  if(charIndex < line.length){
    typedElement.textContent += line[charIndex];
    charIndex++;
    setTimeout(typeLine, 50);
  } else {
    // show the line for 1s, then replace with next line
    setTimeout(() => {
      typedElement.textContent = ''; // clear previous line
      lineIndex = (lineIndex + 1) % codeLines.length; // loop back
      charIndex = 0;
      typeLine();
    }, 1000);
  }
}

typeLine();
</script>





































































