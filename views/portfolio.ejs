      </div>
      <div onclick="showSkill('mongodb')" class="p-4 border border-[#2dd4bf]/30 rounded-md hover:border-[#2dd4bf] transition cursor-pointer">
        <i class="devicon-mongodb-plain colored text-4xl"></i>
        <p class="mt-2">MongoDB</p>
      </div>

      <!-- Tools -->
      <div onclick="showSkill('git')" class="p-4 border border-[#2dd4bf]/30 rounded-md hover:border-[#2dd4bf] transition cursor-pointer">
        <i class="devicon-git-plain colored text-4xl"></i>
        <p class="mt-2">Git / GitHub</p>
      </div>
      <div onclick="showSkill('deploy')" class="p-4 border border-[#2dd4bf]/30 rounded-md hover:border-[#2dd4bf] transition cursor-pointer">
        <i class="devicon-npm-original-wordmark text-4xl text-red-500"></i>
        <p class="mt-2">Deployment</p>
      </div>
