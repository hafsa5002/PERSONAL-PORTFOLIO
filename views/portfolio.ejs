<script>
  const skills = {
    html: `const skill = "HTML"; 
// Expertise in writing semantic, accessible markup.
// Ability to structure websites with SEO-friendly best practices.
// Skilled in forms, tables, and cross-browser compatibility.`,
    
    css: `const skill = "CSS & TailwindCSS";
// Advanced styling, animations, and grid/flex layouts.
// TailwindCSS for rapid UI prototyping and modern responsive design.
// Pixel-perfect implementation from Figma/Adobe XD designs.`,
    
    js: `const skill = "JavaScript";
// Writing clean ES6+ code with modular structure.
// DOM manipulation, event handling, and API integration.
// Strong foundation in asynchronous programming and promises.`,
    
    node: `const skill = "Node.js";
// Building scalable backend applications with REST APIs.
// Handling middleware, authentication, and data flow.
// Experience with real-time features using WebSockets.`,
    
    express: `const skill = "Express.js";
// Creating secure, lightweight, and maintainable server-side routes.
// RESTful API design following industry standards.
// Middleware handling for authentication and logging.`,
    
    mongodb: `const skill = "MongoDB";
// Schema design for flexible and scalable NoSQL databases.
// CRUD operations, aggregation pipelines, and indexing.
// Connecting backends with Mongoose for smooth data modeling.`,
    
    git: `const skill = "Git & GitHub";
// Version control with branching strategies (Git Flow).
// Managing collaborative workflows with pull requests.
// Comfortable with CLI commands and resolving merge conflicts.`,
    
    deploy: `const skill = "Deployment";
// Experience with cloud platforms and CI/CD pipelines.
// Deploying apps on Render, Vercel, and Heroku.
// Configuring environment variables & production builds.`,
    
    responsive: `const skill = "Responsive Design";
// Mobile-first design principles for all screen sizes.
// Ensuring cross-browser & cross-device compatibility.
// Creating adaptive layouts for accessibility and UX.`
  };

  function showSkill(skill) {
    const textBox = document.getElementById('skillText');
    textBox.innerText = skills[skill];
    document.getElementById('skillDetails').classList.remove("hidden");
  }
</script>

